# Orbital AMM Testnet Configuration

# Application Settings
ENVIRONMENT=testnet
DEBUG=false
RUST_LOG=info
LOG_LEVEL=info

# Server Configuration
SERVER_ADDRESS=0.0.0.0:8080
SERVER_PORT=8080
CORS_ORIGINS=https://testnet.orbitalamm.xyz

# Database Configuration
DATABASE_URL=postgres://orbital:${POSTGRES_PASSWORD}@orbital-db:5432/orbital_amm_testnet
DATABASE_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_URL=redis://orbital-cache:6379
REDIS_DB=1

# Testnet RPC URLs
ETH_RPC_URL=https://ethereum-holesky.publicnode.com
ETH_WS_URL=wss://ethereum-holesky.publicnode.com
ARB_RPC_URL=https://arbitrum-sepolia.publicnode.com
ARB_WS_URL=wss://arbitrum-sepolia.publicnode.com
OP_RPC_URL=https://optimism-sepolia.publicnode.com
OP_WS_URL=wss://optimism-sepolia.publicnode.com
BASE_RPC_URL=https://base-sepolia.publicnode.com
BASE_WS_URL=wss://base-sepolia.publicnode.com

# Pool Configuration
MIN_LIQUIDITY=100
MAX_SLIPPAGE=0.05
DEFAULT_FEE=0.003

# Solver Configuration
SOLVER_TIMEOUT=60
MAX_SOLVERS=5
MIN_REPUTATION=0.3

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Security
CORS_ENABLED=true
HTTPS_ONLY=true
SECURE_COOKIES=true

# Feature Flags
ENABLE_SWAPS=true
ENABLE_INTENTS=true
ENABLE_SOLVER_NETWORK=true
ENABLE_MEV_PROTECTION=true
ENABLE_ANALYTICS=true

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=https://api-testnet.orbitalamm.xyz
NEXT_PUBLIC_WS_URL=wss://api-testnet.orbitalamm.xyz
NEXT_PUBLIC_ENVIRONMENT=testnet
NEXT_PUBLIC_CHAIN_ID=17000
NEXT_PUBLIC_ENABLE_TESTNETS=true