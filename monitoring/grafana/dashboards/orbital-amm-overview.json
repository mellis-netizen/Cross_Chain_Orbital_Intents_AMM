{
  "dashboard": {
    "id": null,
    "title": "Orbital AMM Overview",
    "tags": ["orbital-amm", "defi", "cross-chain"],
    "timezone": "UTC",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "API Requests per Second",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"orbital-amm-api\"}[5m])",
            "legendFormat": "RPS"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Response Time",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"orbital-amm-api\"}[5m]))",
            "legendFormat": "95th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"orbital-amm-api\",status=~\"5..\"}[5m]) / rate(http_requests_total{job=\"orbital-amm-api\"}[5m])",
            "legendFormat": "Error Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Active Solvers",
        "type": "stat",
        "targets": [
          {
            "expr": "orbital_solvers_active",
            "legendFormat": "Active Solvers"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Intent Execution Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(orbital_intents_executed_total[5m])",
            "legendFormat": "Executed"
          },
          {
            "expr": "rate(orbital_intents_failed_total[5m])",
            "legendFormat": "Failed"
          }
        ],
        "yAxes": [
          {
            "label": "Intents/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Trading Volume (24h)",
        "type": "graph",
        "targets": [
          {
            "expr": "increase(orbital_trading_volume_usd[24h])",
            "legendFormat": "Volume USD"
          }
        ],
        "yAxes": [
          {
            "label": "USD",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Pool Liquidity by Chain",
        "type": "piechart",
        "targets": [
          {
            "expr": "orbital_pool_liquidity_usd by (chain)",
            "legendFormat": "{{ chain }}"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Cross-Chain Bridge Status",
        "type": "table",
        "targets": [
          {
            "expr": "orbital_bridge_status by (source_chain, dest_chain)",
            "legendFormat": "{{ source_chain }} -> {{ dest_chain }}"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16}
      },
      {
        "id": 9,
        "title": "System Resources",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %"
          },
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "legendFormat": "Memory Usage %"
          }
        ],
        "yAxes": [
          {
            "label": "Percentage",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16}
      }
    ]
  }
}